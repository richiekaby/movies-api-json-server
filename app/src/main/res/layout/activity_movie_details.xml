<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.details.MovieDetailsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cv"
        >
        <com.google.android.material.appbar.MaterialToolbar
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:titleTextColor="@color/white"
            android:id="@+id/tlBar">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:text="@string/favourite_movies"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="0dp"
        app:cardCornerRadius="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/baseline_image_24"
                android:layout_height="300dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cv"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="normal"
            android:text="Original Language"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_original_language"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="en"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Original Title"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_original_title"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="Puss in Boots: The Last Wish"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Overview"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="Puss in Boots discovers that his passion for adventure has taken its toll: He has burned through eight of his nine lives, leaving him with only one life left. Puss sets out on an epic journey to find the mythical Last Wish and restore his nine lives."
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Popularity"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_popularity"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="6660.227"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Favourite"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_favourite"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="Yes"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Adult Content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_adult"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="Yes"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Release Date"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_release_date"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="2022-12-07"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Vote Average"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_vote_average"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="8.6"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="Vote Count"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_vote_count"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="4759"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:text="My Score"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_my_score"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_margin="5dp"
            android:textStyle="normal"
            android:text="9"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llFirst"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/purple_500"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginEnd="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/llSecond"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvUpdateSCORE"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:text="UPDATE SCORE"
                    android:drawablePadding="10dp"
                    android:gravity="center|center_horizontal"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSecond"
                android:layout_width="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginStart="1dp"
                android:background="@color/purple_500"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/llFirst"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tvRemoveFavourite"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:drawablePadding="10dp"
                    android:textSize="12sp"
                    android:text="REMOVE FAVOURITE"
                    android:gravity="center|center_horizontal"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>